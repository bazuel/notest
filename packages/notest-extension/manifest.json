{
  "name": "NoTest PM",
  "description": "Record sessions to generate end-to-end tests",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "cookies",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "chrome/background.js"
  },
  "commands": {
    "toggle-recording": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "windows": "Ctrl+Shift+Q",
        "mac": "Command+Shift+Q"
      },
      "description": "Toggle session registration"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/assets/icon-16.png",
      "32": "/assets/icon-32.png",
      "64": "/assets/icon-64.png",
      "128": "/assets/icon-128.png"
    }
  },
  "icons": {
    "16": "/assets/icon-16.png",
    "32": "/assets/icon-32.png",
    "64": "/assets/icon-64.png",
    "128": "/assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "page/monitor.js",
        "page/widget.js",
        "page/widget.css",
        "page/custom-element.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content_scripts/embedder.js",
        "content_scripts/background-page-channel.js",
        "content_scripts/storage.js"
      ],
      "run_at": "document_start"
    }
  ]
}
